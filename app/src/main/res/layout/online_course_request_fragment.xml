<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/etCourseName"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:background="@drawable/lastnameinput"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="58dp" />

    <Button
        android:id="@+id/btnSendCourseRequest"
        android:layout_width="237dp"
        android:layout_height="39dp"
        android:background="@drawable/sendarequest"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="536dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Link"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="218dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/takecoursebutton"
        app:layout_constraintEnd_toEndOf="@+id/etCourseName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etCourseName"
        app:layout_constraintTop_toBottomOf="@+id/etCourseName" />

    <TextView
        android:id="@+id/tvCoursePricex"
        android:layout_width="313dp"
        android:layout_height="34dp"
        android:text="Price"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="469dp" />

    <TextView
        android:id="@+id/tvCreator"
        android:layout_width="313dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:text="Created by *****"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tvCourseNamex"
        app:layout_constraintStart_toStartOf="@+id/tvCourseNamex"
        app:layout_constraintTop_toBottomOf="@+id/tvCourseNamex" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="307dp"
        android:layout_height="126dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/tvCreator"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvCreator"
        app:layout_constraintTop_toBottomOf="@+id/tvCreator"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/tvCourseNamex"
        android:layout_width="313dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:text="Cource Name"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>