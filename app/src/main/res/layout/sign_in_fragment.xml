<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etMailSingIn"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/lastnameinput"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/etPasswordSignIn"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/lastnameinput"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/etMailSingIn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/btnSignInSignIn"
        android:layout_width="237dp"
        android:layout_height="39dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/signinbutton"
        app:layout_constraintEnd_toEndOf="@+id/etPasswordSignIn"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/etPasswordSignIn"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordSignIn" />

    <Button
        android:id="@+id/btnGoToCreateStudentAccount"
        android:layout_width="237dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/createastudentaccount"
        app:layout_constraintEnd_toEndOf="@+id/btnSignInSignIn"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/btnSignInSignIn"
        app:layout_constraintTop_toBottomOf="@+id/btnSignInSignIn" />

    <Button
        android:id="@+id/btnGoToCreateNormalAccount"
        android:layout_width="237dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/createanormalaccount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnGoToCreateStudentAccount"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="@+id/btnGoToCreateStudentAccount"
        app:layout_constraintTop_toBottomOf="@+id/btnGoToCreateStudentAccount"
        app:layout_constraintVertical_bias="0.486" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="36dp"
        android:layout_height="21dp"
        android:layout_marginTop="168dp"
        android:text="Mail"
        app:layout_constraintEnd_toEndOf="@+id/etMailSingIn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etMailSingIn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Password"
        app:layout_constraintStart_toStartOf="@+id/etMailSingIn"
        app:layout_constraintTop_toBottomOf="@+id/etMailSingIn" />
</androidx.constraintlayout.widget.ConstraintLayout>