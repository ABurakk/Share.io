<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4D"
                android:layout_width="459dp"
                android:layout_height="142dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_udemy_logo"
                app:layout_constraintEnd_toEndOf="@+id/tvCourseNameD"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="@+id/tvCourseNameD"
                app:layout_constraintTop_toBottomOf="@+id/tvCourseNameD"
                tools:srcCompat="@tools:sample/avatars[0]" />

            <TextView
                android:id="@+id/tvCourseNameD"
                android:layout_width="362dp"
                android:layout_height="117dp"
                android:layout_marginTop="56dp"
                android:textColor="#070708"
                android:textSize="28sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView20" />

            <TextView
                android:id="@+id/tvCoursePriceD"
                android:layout_width="351dp"
                android:layout_height="57dp"
                android:layout_marginTop="12dp"
                android:textColor="#070708"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tvMajorD"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvMajorD"
                app:layout_constraintTop_toBottomOf="@+id/tvMajorD" />

            <Button
                android:id="@+id/btnBilling"
                android:layout_width="201dp"
                android:layout_height="51dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/paywithgoogle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvCreatorOfCourse"
                android:layout_width="353dp"
                android:layout_height="57dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="2dp"
                android:text="Created By ****"
                android:textColor="#233975"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView4D"
                app:layout_constraintHorizontal_bias="0.418"
                app:layout_constraintStart_toStartOf="@+id/imageView4D"
                app:layout_constraintTop_toBottomOf="@+id/imageView4D" />

            <TextView
                android:id="@+id/tvMajorD"
                android:layout_width="346dp"
                android:layout_height="61dp"
                android:layout_marginTop="8dp"
                android:text="Major:****"
                android:textColor="#070708"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="353dp"
                android:layout_height="61dp"
                android:layout_marginTop="8dp"
                android:text="This Online Course was Requested by"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="@+id/tvCreatorOfCourse"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvCreatorOfCourse"
                app:layout_constraintTop_toBottomOf="@+id/tvCreatorOfCourse" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="220dp"
                android:layout_height="41dp"
                android:layout_marginTop="20dp"
                android:text="(Student was verified by us)"
                android:textAlignment="center"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/tvCoursePriceD"
                app:layout_constraintStart_toStartOf="@+id/tvCoursePriceD"
                app:layout_constraintTop_toBottomOf="@+id/tvCoursePriceD" />

            <Button
                android:id="@+id/button"
                android:layout_width="201dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/paywithwallet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btnBilling"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btnBilling"
                app:layout_constraintTop_toBottomOf="@+id/btnBilling"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="167dp"
                android:layout_height="27dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView19"
                app:layout_constraintStart_toEndOf="@+id/imageView17"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/donatetext" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/settings" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:background="@color/thmeBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView18"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>